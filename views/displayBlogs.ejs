<!DOCTYPE html>
<html>
  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
      $(document).ready(function () {
        var blogs = [];
        var sortField;
        var sortOrder;

        $("#getBlogs").click(function () {
          $("blogList").empty();
          sortField = "?sortField=" + $("#sortField option:selected").val();
           sortOrder = "&sortOrder=" + $("#sorting option:selected").val();
          console.log(sortField);
          
          $.get(
          "http://localhost:400/blogs/all" + sortField,
          function  (blogs) {
          blogs.forEach((blog) => {
              $("#blogList").append("<li>" + blog.title + "<br>" + blog.author + "<br>" + blog.text +"<br>" + "</li>");

              
            });
          });
        });
      });
    </script>
  </head>
  <body>
    <h1>Display Blogs</h1>
    
    <ul id="blogList"></ul>
    <a href="http://localhost:4000/blogs/all?sort=asc" >Order:Ascending</a>
    <a href="http://localhost:4000/blogs/all?sort=desc" >Order:Descending</a>

